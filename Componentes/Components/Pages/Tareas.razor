@page "/tareas"
@rendermode InteractiveServer
<h3>Tareas</h3>
<div class="card-body mt-3 col-sm-6">
    <div class="d-flex align-items-center gap-2 mb-3">
        <label for="act" class="form-label mb-0">Actividad:</label>
        <input type="text" id="act" class="form-control" @bind="actividad" style="width: 300px;" />
        <button class="btn btn-primary" @onclick="agregar">Agregar</button>
        <button class="btn btn-danger" @onclick="eliminar">Eliminar</button>
    </div>
    @if(actividades.Count() > 0)
    {
        <table class="table table-striped table-bordered table-hover mt-3">
            <thead class="thead-dark">
                <tr>
                    <td>TAREAS</td>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < actividades.Count; i++)
                {
                    <tr>
                        <td>@actividades[i]</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
@code {
    string actividad = "";
    private List<string> actividades = new();
    private void eliminar()
    {
        actividades.Remove(actividad);
    }
    private void agregar()
    {
        actividades.Add(actividad);
    }
}
