@page "/conversor"
@rendermode InteractiveServer

<h3 class="card-title">Cambio de moneda</h3>

<div class="card-body mt-3 col-sm-6">

    <div class="form-group row mb-2">
        <label for="mx" class="col-sm-4 col-form-label">Pesos mexicanos:</label>
        <div class="col-sm-8">
            <input type="number" id="mx" @bind="pesos" class="form-control" />
        </div>
    </div>

    <div class="form-group row mb-3">
        <div class="col-sm-4"></div>
        <div class="col-sm-8">
            <button @onclick="_convertir" class="btn btn-primary">Calcular</button>
        </div>
    </div>

    <div class="form-group row mb-2">
        <label for="dolares" class="col-sm-4 col-form-label">Dólares:</label>
        <div class="col-sm-8">
            <input type="number" id="dolares" value="@_dol" class="form-control" readonly />
        </div>
    </div>

    <div class="form-group row mb-2">
        <label for="euros" class="col-sm-4 col-form-label">Euros:</label>
        <div class="col-sm-8">
            <input type="number" id="euros" value="@_eu" class="form-control" readonly />
        </div>
    </div>

    <div class="form-group row mb-2">
        <label for="libras" class="col-sm-4 col-form-label">Libras:</label>
        <div class="col-sm-8">
            <input type="number" id="libras" value="@_li" class="form-control" readonly />
        </div>
    </div>
</div>

@code {
	double _dol, _eu, _li;
	double pesos;
	private void _convertir()
	{
		_dol = pesos * 20.32;
		_eu = pesos * 21.94;
		_li = pesos * 26.31;
	}
}
