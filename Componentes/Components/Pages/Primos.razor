@page "/primos"
@rendermode InteractiveServer
<h3>Primos</h3>
<div class="card-body mt-3 col-sm-6">
    <div class="form-group row mb-2">
        <label for="uno" class="col-sm-4 col-form-label">Número entero:  </label>
        <div class="col-sm-8">
            <input type="number" id="uno" class="form-control" @bind="@limite"/>
        </div>
    </div>
    <button class="btn btn-primary" @onclick="calcular">Calcular</button>
    <table class="table table-striped table-bordered table-hover mt-3">
        <thead class="thead-dark">
            <tr>
                <td>PRIMOS</td>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < primos.Count; i++)
            {
                <tr>
                    <td>@primos[i]</td>
                </tr>
            }
        </tbody>
    </table>
</div>
@code {
    int limite;
    List<int> primos = new();
    private void calcular()
    {
        primos.Clear();
        for (int i = 0; i <= limite; i++)
        {
            int divisores = 0;
            for(int j = 1; j <= i; j++)
            {
                if (i % j == 0)
                {
                    divisores++;
                }
            }
            if(divisores == 2)
            {
                primos.Add(i);
            }
        }
    }
}
