@page "/numeros"
@rendermode InteractiveServer
<h3>Listanum</h3>
<div class="card-body mt-3 col-sm-6">
    <div class="form-group row mb-2">
        <label for="uno" class="col-sm-4 col-form-label" >Número 1:  </label>
        <div class="col-sm-8">
            <input type="number" id="uno" class="form-control" @bind="@uno" />
        </div>
    </div>
    <div class="form-group row mb-2">
        <label for="dos" class="col-sm-4 col-form-label">Número 2:</label>
        <div class="col-sm-8">
            <input type="number" id="dos" class="form-control" @bind="@dos" />
        </div>
    </div>
    <button class="btn btn-primary" @onclick="calcular">Calcular</button>
    <table class="table table-striped table-bordered table-hover mt-3">
        <thead class="thead-dark">
        <tr>
            <td>PARES</td>
            <td>IMPARES</td>
        </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Math.Max(pares.Count, impares.Count); i++)
            {
                <tr>
                    <td>@(i < pares.Count ? pares[i] : "")</td>
                    <td>@(i < impares.Count ? impares[i] : "")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
@code {
    int uno, dos;
    List<int> pares = new();
    List<int> impares = new();
    private void calcular()
    {
        pares.Clear();
        impares.Clear();
        for (int i = dos; i >= uno; i--)
        {
            if(i % 2 == 0)
            {
                pares.Add(i);
            }
            else
            {
                impares.Add(i);
            }
        }
    }
}
