@page "/d"
@rendermode InteractiveServer

<h3>Conocer los dias del mes</h3>

<div class="card-body mt-3 col-sm-6">
    <div class="form-group row mb-2">
        <label for="mes" class="col-sm-4 col-form-label" >Mes: </label>
        <div class="col-sm-8">
            <input type="number" id="mes" class="form-control" @bind="@mes" />
        </div>
    </div>
    <div class="form-group row mb-2">
        <label for="año" class="col-sm-4 col-form-label">Año:</label>
        <div class="col-sm-8">
            <input type="number" id="año" class="form-control" @bind="@año" />
        </div>
    </div>
    <button class="btn btn-primary" @onclick="calcular">Calcular</button>
    <p id="t" class="mt-3">@texto</p>
</div>
@code {
    int mes, año;
    string texto = "";
    private void calcular()
    {
        if (mes > 12 || mes < 1) {
            texto = "Mes no valido";
        }
        else if (mes == 2)
        {
            bool bisiesto = (año % 4 == 0 && año % 100 != 0) || (año % 400 == 0);
            int dias = bisiesto ? 29 : 28;
            texto = $"Febrero del año {año} tiene {dias} días.";
        }
        else if (mes == 1 || mes == 3||mes == 5 ||mes== 10|| mes==7 ||mes==8 ||mes==12)
        {
            texto = $"El {mes} del año {año} tiene 31 dias";
        }
        else
        {
            texto = $"El {mes} del año {año} tiene 30 dias";
        }
    }
}
